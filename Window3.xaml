<Window x:Class="WpfApp1.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Добавление читателя" Height="300" Width="260">
    <Grid Background="AntiqueWhite" >
        <TextBox Name="TextBox1" Background="#FFF1F1F1" HorizontalAlignment="Left" Margin="25,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20"/>
        <TextBox Name="TextBox2" Background="#FFF1F1F1" HorizontalAlignment="Left" Margin="25,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20"/>
        <TextBox Name="TextBox3" Background="#FFF1F1F1" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20" Margin="25,125,0,0"/>
        <TextBox Name="TextBox4" Background="#FFF1F1F1" HorizontalAlignment="Left" Margin="25,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Height="20"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="50,200,0,0" VerticalAlignment="Top" Height="50" Width="150" Click="Button_Click"/>
        <Label Content="Номер" HorizontalAlignment="Left" Margin="25,55,0,0" VerticalAlignment="Top" Width="200" Height="25" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label Content="Название книги" HorizontalAlignment="Left" Margin="25,100,0,0" VerticalAlignment="Top" Width="200" Height="25" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label Content="Дата взятия" HorizontalAlignment="Left" Margin="25,145,0,0" VerticalAlignment="Top" Width="200" Height="25" HorizontalContentAlignment="Center" FontSize="10"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Width="200" Height="25" HorizontalContentAlignment="Center" FontSize="10"/>
    </Grid>
</Window>
