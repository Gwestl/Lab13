<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="533">
    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="250">



            <StackPanel>
                <TextBlock Text="Login form" TextAlignment="Center"/>
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Login:"/>
                    <TextBox Name="LoginTextBox"/>
                </DockPanel>
                <DockPanel LastChildFill="True">
                    <TextBlock Text="Password:"/>
                    <PasswordBox Name="PassBox"/>
                </DockPanel>
                <Button Content="Log in" Name="LoginButton" Click="LoginButton_Click"
IsDefault="True"/>
                <TextBlock Name="MessageBlock"/>
            </StackPanel>
        </Border>
        <Image HorizontalAlignment="Left" Height="22" Margin="64,54,0,0" VerticalAlignment="Top" Width="390" Source="/Эллипс 1.png" StretchDirection="UpOnly" Stretch="UniformToFill"/>
        <Label Content="ТанКниги" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="312" Height="57" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="36" FontFamily="Impact" Foreground="#FF325CA0" FontStyle="Italic"/>


    </Grid>
</Window>
